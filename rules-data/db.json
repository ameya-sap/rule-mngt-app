{
  "rules": {
    "q67ols": {
      "name": "Vendor Blacklisting for Poor Quality",
      "businessCategory": "Quality Management",
      "description": "Flags a vendor for blacklisting after three failed quality inspection lots in a single quarter.",
      "conditions": [
        {
          "field": "vendor.failedInspectionsCount",
          "operator": ">=",
          "value": 3
        },
        {
          "field": "reportingPeriod",
          "operator": "==",
          "value": "Current Quarter"
        }
      ],
      "actions": [
        {
          "type": "procurement",
          "function": "flag_vendor_for_review",
          "description": "Places a 'Poor Quality' flag on the vendor master record.",
          "parameters": {
            "vendorId": "<vendorId>",
            "flag": "Blacklist Review"
          }
        },
        {
          "type": "notification",
          "function": "send_email_alert",
          "description": "Notifies the procurement manager about the vendor review.",
          "parameters": {
            "subject": "Vendor <vendorId> Flagged for Poor Quality",
            "recipient": "<procurementManagerEmail>",
            "body": "Vendor <vendorId> has had 3 or more failed quality inspections this quarter and requires review."
          }
        }
      ],
      "status": "inactive"
    },
    "w9aqgp": {
      "name": "Long-Running Database Queries",
      "businessCategory": "Performance Monitoring",
      "description": "Flags database queries that are consuming excessive resources and impacting performance.",
      "conditions": [
        {
          "field": "database_query.runtime",
          "operator": ">",
          "value": "300 seconds"
        }
      ],
      "actions": [
        {
          "type": "alert",
          "function": "generate_dashboard_alert",
          "parameters": {
            "details": "Long-running query detected.",
            "query": "<queryDetails>",
            "user": "<responsibleUser>"
          }
        },
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "body": "A database query is running for an excessive duration.",
            "recipient": "database administrator",
            "subject": "Long-Running Database Query"
          }
        }
      ],
      "status": "active"
    },
    "5nel8": {
      "name": "Rapid Table Growth Alert",
      "businessCategory": "System Level Resources",
      "description": "Notifies the database administrator when a critical table is experiencing an unusual and rapid increase in size.",
      "conditions": [
        {
          "field": "database.table.name",
          "operator": "in",
          "value": [
            "BSAK",
            "BKPF"
          ]
        },
        {
          "field": "database.table.growth_rate",
          "operator": ">",
          "value": "10%"
        }
      ],
      "actions": [
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "subject": "Rapid Table Growth Alert",
            "recipient": "database administrator",
            "body": "Table <tableName> is growing rapidly."
          }
        },
        {
          "type": "workflow",
          "function": "trigger_source_check",
          "parameters": {
            "table": "<tableName>"
          }
        }
      ],
      "status": "active"
    },
    "to3pn": {
      "name": "Critical Batch Job Failure",
      "businessCategory": "Job and Process Management",
      "description": "Automatically creates an incident when a business-critical batch job fails.",
      "conditions": [
        {
          "field": "batch_job.status",
          "operator": "!=",
          "value": "Success"
        },
        {
          "field": "batch_job.name",
          "operator": "in",
          "value": [
            "Z_CRITICAL_JOB_1",
            "Z_CRITICAL_JOB_2"
          ]
        }
      ],
      "actions": [
        {
          "type": "ticket_creation",
          "function": "create_buganizer_ticket",
          "parameters": {
            "logs": "<jobLogs>",
            "priority": "High",
            "details": "Batch job failed."
          }
        },
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "message": "Critical batch job failed.",
            "recipient": "on-call support team"
          }
        }
      ],
      "status": "active"
    },
    "z93f0lh": {
      "name": "Product Launch Discount",
      "businessCategory": "Sales & Finance",
      "description": "Applies a 15% promotional discount on 'New Gadgets' during Q4.",
      "conditions": [
        {
          "field": "productCategory",
          "operator": "==",
          "value": "New Gadgets"
        },
        {
          "field": "salesPeriod",
          "operator": "in",
          "value": [
            "Q4"
          ]
        }
      ],
      "actions": [
        {
          "type": "pricing",
          "function": "apply_promotional_discount",
          "description": "Calculates and applies a 15% discount at the order item level.",
          "parameters": {
            "orderId": "<orderId>",
            "itemNumber": "<itemNumber>",
            "discountRate": 0.15
          }
        }
      ],
      "status": "active"
    },
    "n63ohf": {
      "name": "High OData Gateway Error Rate",
      "businessCategory": "Performance Monitoring",
      "description": "Generates an alert when the OData error rate exceeds a critical threshold, indicating a potential issue with the SAP Gateway.",
      "conditions": [
        {
          "field": "OData_error_rate",
          "operator": ">",
          "value": "5%"
        }
      ],
      "actions": [
        {
          "type": "ticket_creation",
          "function": "create_buganizer_ticket",
          "parameters": {
            "priority": "P1",
            "description": "High OData Gateway error rate detected."
          }
        },
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "message": "High OData Gateway error rate detected.",
            "recipient": "SAP Basis"
          }
        }
      ],
      "status": "active"
    },
    "89rkvs": {
      "name": "Mass Dump Detection",
      "businessCategory": "ABAP Dump Analysis (ST22)",
      "description": "Detects a sudden increase in the number of similar dumps, which could indicate a system-wide issue or recent transport failure.",
      "conditions": [
        {
          "field": "dump.count",
          "operator": ">",
          "value": "20"
        },
        {
          "field": "dump.user",
          "operator": "!=",
          "value": "Batch"
        }
      ],
      "actions": [
        {
          "type": "alert",
          "function": "send_critical_alert",
          "parameters": {
            "recipient": "SAP Basis team"
          }
        },
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "message": "Mass dumps detected. Check for recent transports."
          }
        }
      ],
      "status": "active"
    },
    "60h0ek": {
      "name": "Gold Customer Discount",
      "businessCategory": "Sales & Finance",
      "description": "Apply 10% extra discount for Gold customers with invoices over $1000",
      "conditions": [
        {
          "field": "customerClass",
          "operator": "==",
          "value": "Gold"
        },
        {
          "field": "invoiceAmount",
          "operator": ">",
          "value": 1000
        }
      ],
      "actions": [
        {
          "type": "discount",
          "function": "apply_discount",
          "description": "Applies a discount to an order in SAP",
          "parameters": {
            "amount": 0.1,
            "orderId": "<orderId>"
          }
        },
        {
          "type": "logging",
          "function": "log_event",
          "description": "Logs the discount application to an audit trail",
          "parameters": {
            "eventName": "DiscountApplied",
            "orderId": "<orderId>",
            "details": "10% discount applied to Gold customer"
          }
        }
      ],
      "status": "active"
    },
    "y4iqbv": {
      "name": "Outbound IDoc Processing Delay",
      "businessCategory": "Application Data Sources",
      "description": "Flags a delay in processing outbound IDocs to an external system, which could indicate an integration issue.",
      "conditions": [
        {
          "field": "idoc.direction",
          "operator": "==",
          "value": "Outbound"
        },
        {
          "field": "idoc.status",
          "operator": "in",
          "value": [
            "03",
            "30",
            "41"
          ]
        },
        {
          "field": "idoc.age",
          "operator": ">",
          "value": "30 minutes"
        }
      ],
      "actions": [
        {
          "type": "alert",
          "function": "generate_dashboard_alert",
          "parameters": {
            "color": "red"
          }
        },
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "message": "Outbound IDoc processing delay detected.",
            "recipient": "Integration Support"
          }
        }
      ],
      "status": "active"
    },
    "n672l": {
      "name": "Preventative Maintenance Work Order Creation",
      "businessCategory": "Plant Maintenance",
      "description": "Creates a new maintenance work order for a specific piece of equipment based on a predefined schedule.",
      "conditions": [
        {
          "field": "equipment.maintenanceSchedule.nextDueDate",
          "operator": "==",
          "value": "Today"
        },
        {
          "field": "equipment.status",
          "operator": "==",
          "value": "In Service"
        }
      ],
      "actions": [
        {
          "type": "maintenance",
          "function": "create_maintenance_order",
          "description": "Generates a preventative maintenance work order in SAP PM.",
          "parameters": {
            "equipmentId": "<equipmentId>",
            "orderType": "Preventative",
            "workCenter": "<responsibleWorkCenter>"
          }
        }
      ],
      "status": "active"
    },
    "x9lzw": {
      "name": "Automatic Dunning for Overdue Invoices",
      "businessCategory": "Accounts Receivable",
      "description": "Initiates the dunning process for customer invoices that are overdue by more than 30 days.",
      "conditions": [
        {
          "field": "invoice.status",
          "operator": "==",
          "value": "Overdue"
        },
        {
          "field": "invoice.daysPastDue",
          "operator": ">",
          "value": 30
        }
      ],
      "actions": [
        {
          "type": "collections",
          "function": "create_dunning_proposal",
          "description": "Creates a dunning proposal for the invoice.",
          "parameters": {
            "dunningLevel": 1,
            "invoiceId": "<invoiceId>"
          }
        },
        {
          "type": "communication",
          "function": "send_dunning_email",
          "description": "Sends an initial dunning email to the customer.",
          "parameters": {
            "body": "Your invoice <invoiceId> is 30 days past due. Please remit payment.",
            "recipient": "<customerContactEmail>",
            "subject": "Overdue Invoice Reminder"
          }
        }
      ],
      "status": "active"
    },
    "8orasr": {
      "name": "Stuck Update Task Restart",
      "businessCategory": "Job and Process Management",
      "description": "Automatically restarts a stuck SAP update task to ensure transaction data is processed.",
      "conditions": [
        {
          "field": "update_task.status",
          "operator": "==",
          "value": "Stuck"
        }
      ],
      "actions": [
        {
          "type": "auto_healing",
          "function": "restart_update_task",
          "parameters": {}
        },
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "message": "Stuck update task was automatically restarted."
          }
        }
      ],
      "status": "active"
    },
    "oznryg": {
      "name": "Invoice Blocking for Price Discrepancy",
      "businessCategory": "Accounts Payable",
      "description": "Automatically blocks a vendor invoice if the price on the invoice exceeds the PO price by more than 5%.",
      "conditions": [
        {
          "field": "invoice.materialPrice",
          "operator": ">",
          "value": {
            "operator": "*",
            "field": "purchaseOrder.materialPrice",
            "value": 1.05
          }
        }
      ],
      "actions": [
        {
          "type": "workflow",
          "function": "block_invoice_payment",
          "description": "Sets a payment block on the invoice in SAP.",
          "parameters": {
            "blockReason": "Price Discrepancy",
            "invoiceId": "<invoiceId>"
          }
        },
        {
          "type": "notification",
          "function": "send_alert",
          "description": "Notifies the accounts payable team for manual review.",
          "parameters": {
            "message": "Invoice <invoiceId> for vendor <vendorId> is blocked due to a price discrepancy.",
            "recipient": "apTeam"
          }
        }
      ],
      "status": "active"
    },
    "i2h6f": {
      "name": "Critical Number Range Exhaustion",
      "businessCategory": "Application Data Sources",
      "description": "Alerts when a critical number range object is nearing exhaustion, preventing potential business process failures.",
      "conditions": [
        {
          "field": "numberRange.object",
          "operator": "in",
          "value": [
            "RF_BELEG",
            "RV_BELEG",
            "DEBIT_NOTE"
          ]
        },
        {
          "field": "numberRange.current_level",
          "operator": "<",
          "value": "90%"
        }
      ],
      "actions": [
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "recipient": "SAP Basis team"
          }
        },
        {
          "type": "workflow",
          "function": "create_task",
          "parameters": {
            "task_description": "Extend number range in production."
          }
        }
      ],
      "status": "active"
    },
    "hy45z": {
      "name": "New Employee Onboarding Task List",
      "businessCategory": "Human Capital Management (HCM)",
      "description": "Generates a new employee onboarding checklist for the hiring manager.",
      "conditions": [
        {
          "field": "employee.hireDate",
          "operator": "==",
          "value": "Today"
        },
        {
          "field": "employee.status",
          "operator": "==",
          "value": "Hired"
        }
      ],
      "actions": [
        {
          "type": "workflow",
          "function": "create_task_list",
          "description": "Creates and assigns a standard onboarding task list to the manager.",
          "parameters": {
            "template": "Standard Onboarding Checklist",
            "assignee": "<managerId>",
            "relatedEmployee": "<employeeId>"
          }
        }
      ],
      "status": "active"
    },
    "qz4fs": {
      "name": "Ultra-Purity Hazardous Goods Compliance Check",
      "businessCategory": "Logistics & Shipping",
      "description": "Enforces critical compliance steps for high-purity, dangerous goods shipments to high-regulation countries (e.g., Germany, Taiwan, Korea).",
      "conditions": [
        {
          "field": "product.isDangerousGoods",
          "operator": "==",
          "value": true
        },
        {
          "field": "product.purityGrade",
          "operator": "==",
          "value": "Ultra-Pure"
        },
        {
          "field": "delivery.destinationCountry",
          "operator": "in",
          "value": [
            "DE",
            "TW",
            "KR"
          ]
        }
      ],
      "actions": [
        {
          "type": "workflow",
          "function": "set_shipping_block",
          "description": "The Agent sets a mandatory shipping block on the delivery in SAP using the ABAP Extension.",
          "parameters": {
            "deliveryId": "<deliveryId>",
            "blockReason": "Compliance Hold (DG/UP)"
          }
        },
        {
          "type": "labeling",
          "function": "generate_shipping_label",
          "description": "The Agent calls an external service to generate the specialized dangerous goods label.",
          "parameters": {
            "labelTemplate": "DG_UP_CLASS_9",
            "deliveryId": "<deliveryId>"
          }
        },
        {
          "type": "notification",
          "function": "send_alert_to_compliance_team",
          "description": "The Agent creates a high-priority alert for human review using the Notification Extension.",
          "parameters": {
            "recipient": "TradeCompliance@entegris.com",
            "message": "High-risk delivery <deliveryId> blocked for final compliance check.",
            "severity": "High"
          }
        }
      ],
      "status": "active"
    },
    "vehfs4h": {
      "name": "Low-Stock Material Reorder",
      "businessCategory": "Inventory & Warehouse Management",
      "description": "Triggers an automatic purchase requisition for materials when stock falls below the safety stock level.",
      "conditions": [
        {
          "field": "material.currentStock",
          "operator": "<",
          "value": 101
        },
        {
          "field": "material.isManagedByMRP",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "procurement",
          "function": "create_purchase_requisition",
          "description": "Generates a purchase requisition for the required material.",
          "parameters": {
            "sourcePlant": "<sourcePlant>",
            "quantity": "<requiredQuantity>",
            "materialId": "<materialId>"
          }
        }
      ],
      "status": "active"
    },
    "1w2ukl": {
      "name": "High-Value Customer Credit Check",
      "businessCategory": "Sales & Finance",
      "description": "Performs an automatic credit check and notifies the sales manager for any order over $50,000 from a 'Platinum' customer.",
      "conditions": [
        {
          "field": "customerClass",
          "operator": "==",
          "value": "Platinum"
        },
        {
          "field": "orderAmount",
          "operator": ">",
          "value": 50000
        }
      ],
      "actions": [
        {
          "type": "finance",
          "function": "perform_credit_check",
          "description": "Executes a credit check in SAP Credit Management.",
          "parameters": {
            "orderId": "<orderId>",
            "customerNumber": "<customerNumber>"
          }
        },
        {
          "type": "notification",
          "function": "send_email_alert",
          "description": "Sends an email to the sales manager for review.",
          "parameters": {
            "subject": "High-Value Order for Credit Review",
            "body": "Order <orderId> from a Platinum customer requires your review due to its high value of $<orderAmount>.",
            "recipient": "<salesManagerEmail>"
          }
        }
      ],
      "status": "active"
    },
    "8x9ux3": {
      "name": "Mandatory Customer Master Data Fields",
      "businessCategory": "Master Data Governance",
      "description": "Prevents the creation of a new customer master record if mandatory fields are missing.",
      "conditions": [
        {
          "field": "customerMaster.taxId",
          "operator": "is_empty",
          "value": true
        },
        {
          "field": "customerMaster.status",
          "operator": "==",
          "value": "Pending Creation"
        }
      ],
      "actions": [
        {
          "type": "data",
          "function": "reject_creation",
          "description": "Blocks the creation of the customer master record.",
          "parameters": {
            "reason": "Missing mandatory Tax ID.",
            "recordId": "<customerRecordId>"
          }
        },
        {
          "type": "notification",
          "function": "send_alert",
          "description": "Notifies the data steward for data correction.",
          "parameters": {
            "recipient": "<dataStewardId>",
            "message": "Customer record <customerRecordId> rejected. Please provide a Tax ID."
          }
        }
      ],
      "status": "active"
    },
    "84xm9": {
      "name": "Automatic Leave Request Approval",
      "businessCategory": "Human Capital Management (HCM)",
      "description": "Automatically approves leave requests of 3 days or less if the employee has sufficient balance.",
      "conditions": [
        {
          "field": "leaveRequest.type",
          "operator": "==",
          "value": "Paid Time Off"
        },
        {
          "field": "leaveRequest.duration",
          "operator": "<=",
          "value": 3
        },
        {
          "field": "employee.leaveBalance",
          "operator": ">=",
          "value": {
            "field": "leaveRequest.duration"
          }
        }
      ],
      "actions": [
        {
          "type": "workflow",
          "function": "approve_leave_request",
          "description": "Changes the status of the leave request to 'Approved'.",
          "parameters": {
            "leaveRequestId": "<leaveRequestId>"
          }
        },
        {
          "type": "notification",
          "function": "send_confirmation_email",
          "description": "Sends a confirmation email to the employee.",
          "parameters": {
            "recipient": "<employeeId>",
            "subject": "Leave Request Approved",
            "body": "Your leave request for <leaveRequest.duration> days has been automatically approved."
          }
        }
      ],
      "status": "active"
    },
    "01l8wg": {
      "name": "Dangerous Goods Handling",
      "businessCategory": "Shipping & Logistics",
      "description": "Generates and prints a dangerous goods shipping label and creates a Safety Data Sheet (SDS) for outbound deliveries containing dangerous goods.",
      "conditions": [
        {
          "field": "outboundDelivery.item.isDangerousGoods",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "document_generation",
          "function": "generate_and_print_label",
          "description": "Generates and prints a dangerous goods shipping label.",
          "parameters": {
            "deliveryId": "{{outboundDelivery.id}}",
            "labelType": "dangerous_goods"
          }
        },
        {
          "type": "document_creation",
          "function": "create_sds_document",
          "description": "Creates a Safety Data Sheet (SDS) for the shipment.",
          "parameters": {
            "shipmentId": "{{outboundDelivery.shipmentId}}",
            "productId": "{{outboundDelivery.item.productId}}"
          }
        }
      ],
      "status": "active"
    },
    "6noah": {
      "name": "Quality Inspection for Finished Goods",
      "businessCategory": "Production Planning",
      "description": "Creates a quality inspection lot upon goods receipt of a finished product from a production order.",
      "conditions": [
        {
          "field": "productionOrder.status",
          "operator": "==",
          "value": "Completed"
        },
        {
          "field": "material.type",
          "operator": "==",
          "value": "Finished Goods"
        }
      ],
      "actions": [
        {
          "type": "quality",
          "function": "create_inspection_lot",
          "description": "Generates a new quality inspection lot in SAP QM.",
          "parameters": {
            "quantity": "<quantity>",
            "material": "<materialId>",
            "productionOrder": "<productionOrderId>"
          }
        }
      ],
      "status": "active"
    },
    "kpiivq": {
      "name": "Long-Running Batch Job",
      "businessCategory": "Application Data Sources",
      "description": "Detects and alerts on batch jobs that are running significantly longer than their usual execution time.",
      "conditions": [
        {
          "field": "batch_job.status",
          "operator": "==",
          "value": "Running"
        },
        {
          "field": "batch_job.runtime",
          "operator": ">",
          "value": "1.5 * average_runtime"
        }
      ],
      "actions": [
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "subject": "Long-Running Batch Job Alert",
            "recipient": "<jobOwnerEmail>",
            "body": "Job <jobName> is running longer than usual."
          }
        },
        {
          "type": "documentation",
          "function": "log_event",
          "parameters": {
            "details": "Long-running job detected for performance analysis."
          }
        }
      ],
      "status": "active"
    },
    "uw1fe5": {
      "name": "High Volume of Failed IDocs",
      "businessCategory": "Integration & Data Flow",
      "description": "Detects and alerts on a large number of IDocs with a status of 'Error'.",
      "conditions": [
        {
          "field": "IDocs.status",
          "operator": "==",
          "value": "Error"
        },
        {
          "field": "IDocs.count",
          "operator": ">",
          "value": "50"
        }
      ],
      "actions": [
        {
          "type": "alert",
          "function": "generate_dashboard_alert",
          "parameters": {
            "color": "red"
          }
        },
        {
          "type": "ticket_creation",
          "function": "create_buganizer_ticket",
          "parameters": {
            "details": "High volume of failed IDocs detected.",
            "idoc_numbers": "<idocNumbers>",
            "error_messages": "<errorMessages>"
          }
        }
      ],
      "status": "active"
    },
    "tcfxd": {
      "name": "High Dialog Work Process Utilization",
      "businessCategory": "System Level Resources",
      "description": "Alerts when the percentage of dialog work processes in use exceeds a threshold, which can indicate performance degradation.",
      "conditions": [
        {
          "field": "work_process.dialog_used_percent",
          "operator": ">",
          "value": "90%"
        }
      ],
      "actions": [
        {
          "type": "alert",
          "function": "generate_dashboard_alert",
          "parameters": {
            "details": "High dialog work process utilization."
          }
        },
        {
          "type": "notification",
          "function": "send_email",
          "parameters": {
            "message": "High dialog work process utilization detected.",
            "recipient": "System Performance team"
          }
        }
      ],
      "status": "active"
